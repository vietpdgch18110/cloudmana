<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>
        function checkForm() 
        {
            let inputName = document.getElementById('txtName').value;
            if (inputName.trim().length == 0) {
                 alert('Name can not be empty');
                document.getElementById('lblNameError').innerText = "Name can not be empty ";
                return false;
            }

            // alert: amail cannot be empty and must be syntax
            let inputEmail = document.getElementById('textEmail').value;
            if (inputEmail.trim().length == 0) {
                // alert('Email can not be empty');
                document.getElementById('lblEmailError').innerText = "Email can not be empty ";
                return false;
            }
        }
    </script>
</head>
<body>
    <div class="container">
       
        <center>
            <h1 style="color: red;">Register</h1>
        </center>
        <form action="/doRegister" method="post" onsubmit="return checkForm()">
            <div class="form-group">
                <label for="txtName">Name</label>
                <input type="text" name="txtName" id="txtName" class="form-control">
                <label id="lblNameError" style="color:red">{{model.nameError}}</label>
            </div>
            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="email" name="txtEmail" id="txtEmail" class="form-control">
            </div>
            <center>  <button type="submit" class="btn btn-default" value="Register">Register</button></center>
           
        </form>
    </div>
</body>

</html>